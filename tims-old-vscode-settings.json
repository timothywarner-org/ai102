{
  "workbench.startupEditor": "none",
  "terminal.integrated.fontSize": 18,
  "editor.fontFamily": "'JetBrainsMono Nerd Font', 'Operator Mono', Consolas, 'Courier New', monospace",
  "editor.tabSize": 2,
  "workbench.colorTheme": "GitHub Dark Colorblind (Beta)",
  "powershell.startAutomatically": false,
  "github.copilot.enable": {
      "*": true,
      "plaintext": true,
      "markdown": false,
      "scminput": false
  },
  "codeQL.telemetry.enableTelemetry": true,
  "workbench.iconTheme": "vscode-icons",
  "git.enableSmartCommit": true,
  "editor.minimap.enabled": true,
  "@azure.argTenant": "f74b1450-e46a-41df-abee-ebf3621bfd85",
  "editor.stickyScroll.enabled": false,
  "editor.mouseWheelZoom": true,
  "workbench.animation.speed": 300,
  "disable-hardware-acceleration": false,
  "editor.smoothScrolling": true,
  "vale.doNotShowWarningForFileToBeSavedBeforeLinting": true,
  "[javascript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "explorer.confirmDragAndDrop": false,
  "git.confirmSync": false,
  "workbench.colorCustomizations": {
      "tab.activeBackground": "#ff990044",    // Semi-transparent orange background
      "tab.activeBorder": "#ff9900",          // Solid orange border
      "tab.activeBorderTop": "#ff9900",       // Solid orange top border
      "tab.activeModifiedBorder": "#ff9900",  // Orange border for modified tabs
      "tab.activeForeground": "#ffffff",      // White text for contrast
      "tab.border": "#ffffff10"               // Subtle border between tabs
  },
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.tabSizing": "shrink"
}